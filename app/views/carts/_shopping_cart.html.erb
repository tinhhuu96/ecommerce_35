<% if @order_item.present? && @order_item.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<% if @order_items.blank? %>
  <p class="text-center">
    <%= t".cnt1" %> <%= link_to t(".go_back"), root_path %><%= t".cnt2" %>
  </p>
<% else %>
  <% @order_items.each do |order_item| %>
    <%= render "carts/cart_row", product: order_item.product, order_item: order_item, show_total: true %>
  <% end %>
<div class="bottom-cart">
  <h2 class="subtotal-cart">Subtotal: <%= "#{number_to_currency @cart.subtotal}" %></h2>
  <button class="btn btn-primary checkout-button"><%= t".checkout" %></button>
</div>
<% end %>
