<li class="comment-<%= comment.id %>">
  <%= link_to show_avatar_for(comment.user), comment.user, class: "user_avatar_comment" %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">
    <%= time_ago_in_words(comment.created_at) %> <%= t "ago" %>.
  </span>
  <% if current_user? comment.user %>
      <span><%= link_to t("delete"), comment, method: :delete, data: {confirm: t("confirm")} %></span>
  <% end %>
</li>
